{
  "name": "ZipBot",
  "description": "A Telegram bot for compressing and extracting files with password protection.",
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-apt"
    }
  ],
  "scripts": {
    "postdeploy": "python3 bot.py"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "stack": "heroku-20",
  "environments": {
    "test": {
      "scripts": {
        "test": "pytest"
      }
    }
  },
  "apt": {
    "packages": [
      "unrar",
      "rar"
    ]
  }
}
